@model WickedQuiz.Web.ViewModels.RolesForUser_VM 
@{
    ViewData["Title"] = "AddRoleToUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>AddRoleToUser</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddUserToRole">
            <p>user @Html.DisplayNameFor(model => model.User.UserName) has following roles</p>
            <ul>
                @foreach (var item in Model.AssignedRoles)
                {
                    <li>@Html.DisplayFor(modelItem => item)</li>
                }
            </ul>
            <p>Select additional or new role if applicable</p>
            <input asp-for="UserId" type="hidden" class="form-control" />
            <select asp-for="RoleId" asp-items="@(new SelectList(Model.UnAssignedRoles ))"></select>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

