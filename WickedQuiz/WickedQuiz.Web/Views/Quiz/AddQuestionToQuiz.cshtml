@model ICollection<WickedQuiz.Models.Models.Question>
@{
    ViewData["Title"] = "AddQuestionToQuiz";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var counter = 0;
}

<h1>AddQuestionToQuiz</h1>
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<form asp-action="AddQuestionToQuiz" enctype="multipart/form-data">
    @foreach (var item in Model)
    {
        <input type="type" asp-for="@item.Quiz" name="quizid" value="@ViewBag.QuizId" hidden/>
        <div class="form-group">
            <h2>Question</h2>
            <div class="form-group">
                <label asp-for="@item.QuestionName">Question name</label>
                <input asp-for="@item.QuestionName" type="text" class="form-control" placeholder="Enter question name" required>
                <span asp-validation-for="@item.QuestionName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@item.QuestionName" class="control-label"></label>
                <input name="questionimg" type="file" value="@(item.QuestionName + ".jpg")" data-guid="@item.Id" id="questionimgid" class="form-control questionImage" />
                <input name="listimgindex" id="@item.Id" type="text" style="display:none" value="0" />
                <span asp-validation-for="@item.QuestionName" class="text-danger"></span>
            </div>

            @{
                @foreach (var answer in item.Answers)
                {
                    <div>
                        <label asp-for="@answer.AnswerName">Answers</label>
                        <input asp-for="@answer.AnswerName" type="text" class="form-control" placeholder="Enter answer" required>
                        <span asp-validation-for="@answer.AnswerName" class="text-danger"></span>
                        <select asp-for="@answer.Correct" asp-items="Html.GetEnumSelectList<Answer.State>()">
                            <option>-- Is this answer correct? --</option>
                        </select>
                        <span asp-validation-for="@answer.Correct" class="text-danger"></span>
                    </div>
                    if (counter == 1)
                    {
                        <div class="w-100"></div>
                        counter++;
                    }
                    else
                    {
                        counter++;
                    }
                }
                counter = 0;
            }

        </div>
    }
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>
<div>
    <a asp-action="MyQuizzes">Back to MyQuizzes</a>
</div>
