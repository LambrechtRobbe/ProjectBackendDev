@model WickedQuiz.Models.Models.Quiz
@{
    ViewData["Title"] = "CreateQuiz";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>CreateQuiz</h1>
<form asp-action="CreateQuiz" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Name">Quiz name</label>
        <input asp-for="Name" type="text" class="form-control" placeholder="Enter quizname">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Quiz description</label>
        <input asp-for="Description" type="text" class="form-control" placeholder="Enter quizdiscription">
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="QuestionCount">Total questions</label>
        <input asp-for="QuestionCount" type="number" class="form-control" placeholder="Enter quizname" min="1" max="10">
        <span asp-validation-for="QuestionCount" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Difficulty" class="control-label">How difficult is this quiz?</label>
        <select asp-for="Difficulty" asp-items="Html.GetEnumSelectList<Quiz.Difficulties>()">
            <option>-- Difficulty --</option>
        </select>
        <span asp-validation-for="QuestionCount" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Add questions and answers</button>
</form>
